{
  "manifest_version": 3,
  "name": "发送到GPT",
  "version": "1.0",
  "description": "划线后添加前缀发送到GPT：翻译、格式化",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "notifications",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}